{
  "name": "ec-voice-assistant",
  "version": "1.0.0",
  "description": "EC Site Embedded Voice AI Chatbot",
  "scripts": {
    "start": "ts-node server/index.ts",
    "dev:server": "nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/index.ts",
    "dev": "concurrently \"yarn dev:server\" \"yarn watch:widget\"",
    "build:widget": "vite build --config widget/vite.config.ts",
    "watch:widget": "vite build --config widget/vite.config.ts --watch",
    "build": "yarn build:widget && tsc -p server",
    "start:prod": "node dist/server/index.js"
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.28.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.0"
  },
  "packageManager": "yarn@4.12.0"
}